@model IEnumerable<CustomerInfo>;

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@section css {
    <link href="~/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="~/css/admin-page.css" rel="stylesheet">
}

<header class="header header-admin">
    <div class="container">
        <nav class="page-nav">
            <ul>
                <li>Дашборд</li>
                <li>Блек-лист</li>
            </ul>
            
            <ul class="navbar-nav">
            @if (SignInManager.IsSignedIn(User))
            {
                <li class="nav-item">
                    <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
                </li>
                <li class="nav-item">
                    <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                    </form>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                </li>
            }
            </ul>
        </nav>
    </div>
</header>


<main class="home mt-5">
    <div class="container">
        
        <div class="p-4 border rounded">
            <table id="tblData" class="display compact" style="width:100%">
                <thead class="thead-dark">
                    <tr class="table-info">
                        <th>ID</th>
                        <th>Имя</th>
                        <th>Почта</th>
                        <th>Телефон</th>
                        <th>Тариф</th>
                        <th>Цена</th>
                        <th>КУРС</th>
                        <th>Дата регистрации</th>
                        <th>Оплата статус</th>
                    </tr>
                </thead>
            </table>
        </div>
        
    </div>
</main>

@section scripts {
    <script src="~/js/general/jquery.dataTables.min.js"></script>
    <script src="~/js/admin-page.js"></script>
}